extends layout
block content
  input#android_upload_file_id(type="hidden", value="")
  .row      
    ul.list-group#upload_pic-content
  
  script#upload_pic_view(type='text/x-handlebars-template')
    li.list-group-item
      button.btn.btn-lg.btn-block.btn-primary.text-center#choosefile 选择照片
      
      button#do_upload.btn.btn-lg.btn-block.btn-primary.text-center.btn-success 确认
      .hiddenfile
        form(id="frmUploadPic", method="post", action="/gridfs/put", enctype="multipart/form-data", data-ajax="false")
          input#file4upload(type="file", data-clear-btn="false", name="qqfile", accept="image/*", capture)
    li.list-group-item
      #preview
      ul#fileinfo(data-role="listview", data-inset="true")
  
  canvas#my_canvas(style="display:none")    
    

block page_script
  script(src='/assets/js/bb/lodash.min.js', type='text/javascript')
  script(src='/assets/js/bb/backbone-min.js', type='text/javascript')
  script(src='/assets/thirdjs/jquery.sprintf.js', type='text/javascript')
  script(src='/assets/thirdjs/jquery.canvasResize.js', type='text/javascript')
  script(src='/assets/thirdjs/jquery.exif.js', type='text/javascript')
  script(src='/assets/js/bb/handlebars-v2.0.0.js', type='text/javascript')
  script(type="text/javascript", src="/javascripts/happy.activity.upload.js?v=20150326")
